<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
      
        <div class="col-md-4">
          <div>
           <%= comment.post_id %>: <%= comment.title %> | <%= link_to 'Bearbeiten', edit_comment_path(comment) %> | <%= link_to 'Loeschen', comment, method: :delete, data: { confirm: 'Bist du sicher? Nach dem loeschen ist es weg!' } %>
          </div>
        </div>
         <div>
            <%= comment.content %>
          </div>

          <br>
      </div>
    </div>
  </div>
</div>