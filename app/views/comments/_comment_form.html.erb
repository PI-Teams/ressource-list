
<%= form_for @comment, url: post_comments_path() do |f| %>
     <div class="form-group">
      <%= f.label :title %>
      <%= f.text_area :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
  <% end %>